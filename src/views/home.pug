doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title MRS
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
        link(rel="stylesheet", href="public/css/style.css")
    body 
        main 
            div#welcome
                h1 1:1 Meeting Room Service
                h3 Enter nickname and room name to start
                form
                    div
                        span Nickname:
                        input#nickname(placeholder="Nickname", required, type="text", maxlength='15')
                    div
                        span Room:
                        input#roomname(placeholder="RoomName", required, type="text")
                    button Join
            div#room
                h3 
                div#myStream
                    video#myFace(autoplay, playsinline)
                    span#myNickname
                    button#mute Mute
                    button#camera Camera Off
                    select#cameras
                div#peerStream
                    video#peerFace(autoplay, playsinline)
                    span#peerNickname
                ul 
                form#msg
                    input(placeholder="message", required, type="text")
                    button Send
                button#exit Exit
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 